---
import { Image } from "astro:assets";
interface Props {
  post: any;
}
const { post } = Astro.props;
const { title, description, pubDate, image, author } = post.data;
---

<li
  class="border p-4 shadow-sm rounded-lg overflow-hidden list-none bg-stone-100"
>
  <a href={"/posts/" + post.slug} class="text-decoration-none">
    <div>
      <Image src={image.url} alt={image.alt} class="w-full h-auto rounded-sm" />
      <h2 class="text-2xl font-bold mt-2">{title}</h2>
      <p class="text-gray-600 text-sm mt-2">
        {new Date(pubDate).toLocaleDateString()}
      </p>
      <p class="text-gray-800 mt-2">{description}</p>
    </div>
  </a>
</li>
